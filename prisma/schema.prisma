// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Artist {
  id      Int      @id @default(autoincrement())
  name    String
  albums   Album[]
}

model Album {
  id         Int        @id @default(autoincrement())
  title      String
  year       Int?
  artistId   Int
  artist     Artist       @relation(fields: [artistId], references: [id])
  tracks   Track[]
}

model Track {
  id         Int        @id @default(autoincrement())
  title      String
  albumId   Int
  album     Album       @relation(fields: [albumId], references: [id])
  duration   Int
  playlists Playlist[]
}

model Playlist {
  id         Int        @id @default(autoincrement())
  title      String
  tracks     Track[]
  createdBy    User?    @relation(fields: [createdById], references: [id])
  createdById  Int?
}

model User {
  id         Int        @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  playlists     Playlist[]
}
